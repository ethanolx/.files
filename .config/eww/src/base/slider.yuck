(defwidget slider [prefix class value ?onchange]
    (box :orientation "h" :class "slider" :space-evenly false
        ; (label :text prefix :class "sliderPrefix")
        ; (box :class class :orientation "h" :space-evenly true
        ;     (scale
        ;         :class "sliderRange"
