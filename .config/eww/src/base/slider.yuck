(defwidget sliderPrefix [prefix class]
    (label :text prefix :class "sliderPrefix ${class}")
)

(defwidget sliderRange [class value ?onchange]
    (scale
        :class "sliderRange ${class}"
        :min 0
        :max 101
        :width 120
        :active true
        :value value
        :onchange onchange
        :orientation "h"
        :flipped false
    )
)
